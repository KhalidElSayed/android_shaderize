<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_normal"
        android:orientation="vertical" >

        <TextView
            style="@style/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/prefs_bloom_threshold"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/prefs_bloom_threshold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100" />
    </LinearLayout>

    <LinearLayout
        style="@style/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_normal"
        android:orientation="vertical" >

        <TextView
            style="@style/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/prefs_bloom_source_saturation"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/prefs_bloom_source_saturation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100" />
    </LinearLayout>

    <LinearLayout
        style="@style/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_normal"
        android:orientation="vertical" >

        <TextView
            style="@style/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/prefs_bloom_source_intensity"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/prefs_bloom_source_intensity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="200" />
    </LinearLayout>

    <LinearLayout
        style="@style/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_normal"
        android:orientation="vertical" >

        <TextView
            style="@style/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/prefs_bloom_bloom_saturation"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/prefs_bloom_bloom_saturation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100" />
    </LinearLayout>

    <LinearLayout
        style="@style/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_normal"
        android:orientation="vertical" >

        <TextView
            style="@style/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/prefs_bloom_bloom_intensity"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/prefs_bloom_bloom_intensity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="200" />
    </LinearLayout>

</LinearLayout>